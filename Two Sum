class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        vector <int> r;
        int x =0;
        int y = numbers.size()-1;
        while(x<y){
            if((numbers[x] + numbers[y]) == target){
                r.push_back(x+1);
                r.push_back(y+1);
                break;
            }
            else if ((numbers[x] + numbers[y]) > target)
                y--;
            else
                x++;
        }
        return r;
    }
};
